{
    "name": "homeceu/certificate-manager",
    "description": "Service for managing HomeCEU Certificates",
    "license": "MIT",
    "authors": [
        {
            "name": "Dan McAdams",
            "email": "dan@homeceu.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "HomeCEU\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HomeCEU\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "7.3.*",
        "zordius/lightncandy": "^1.2",
        "ramsey/uuid": "^3.9",
        "slim/slim": "4.*",
        "slim/psr7": "^1.0",
        "php-di/php-di": "^6.0"
    },
    "config": {
        "platform": {
            "php": "7.3"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "phpstan/phpstan": "^0.12.2",
        "symfony/var-dumper": "^5.0"
    },
    "scripts": {
        "post-install-cmd": [
            "HomeCEU\\AppSetup::copyConfigFiles"
        ],
        "analyze": "vendor/bin/phpstan analyse src --level=7",
        "analyse": "@analyze"
    }
}
